{% extends "layouts/base.twig" %}

{% block title %}{{ title|default('404 - Page Not Found') }}{% endblock %}
{% block page_title %}Page Not Found{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body py-5">
                <div class="error-icon mb-4">
                    <i class="bi bi-exclamation-triangle" style="font-size: 6rem; color: var(--warning-color);"></i>
                </div>
                <h1 class="display-1 fw-bold text-primary">404</h1>
                <h4 class="mb-3">Oops! Page Not Found</h4>
                <p class="text-muted mb-4">
                    The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
                </p>
                
                {% if uri %}
                <div class="alert alert-light mb-4">
                    <strong>Requested URL:</strong> {{ uri }}<br>
                    <strong>Method:</strong> {{ method|upper }}
                </div>
                {% endif %}
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a href="{{ url('/') }}" class="btn btn-primary">
                        <i class="bi bi-house"></i> Go to Dashboard
                    </a>
                    <button class="btn btn-outline-secondary" onclick="history.back()">
                        <i class="bi bi-arrow-left"></i> Go Back
                    </button>
                </div>
                
                <hr class="my-4">
                
                <h6 class="text-muted">Quick Links</h6>
                <div class="row">
                    <div class="col-6 col-md-3 mb-2">
                        <a href="{{ url('/members') }}" class="btn btn-outline-primary btn-sm w-100">
                            <i class="bi bi-people"></i><br>Members
                        </a>
                    </div>
                    <div class="col-6 col-md-3 mb-2">
                        <a href="{{ url('/trainers') }}" class="btn btn-outline-success btn-sm w-100">
                            <i class="bi bi-person-badge"></i><br>Trainers
                        </a>
                    </div>
                    <div class="col-6 col-md-3 mb-2">
                        <a href="{{ url('/workout-plans') }}" class="btn btn-outline-info btn-sm w-100">
                            <i class="bi bi-clipboard-check"></i><br>Plans
                        </a>
                    </div>
                    <div class="col-6 col-md-3 mb-2">
                        <a href="{{ url('/attendance') }}" class="btn btn-outline-warning btn-sm w-100">
                            <i class="bi bi-calendar-check"></i><br>Attendance
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-icon {
    animation: bounce 2s infinite;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10px);
    }
    60% {
        transform: translateY(-5px);
    }
}
</style>
{% endblock %}

