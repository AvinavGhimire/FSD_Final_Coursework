{% extends "layouts/base.twig" %}

{% block title %}{{ title|default('500 - Server Error') }}{% endblock %}
{% block page_title %}Server Error{% endblock %}

{% block content %}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body py-5">
                <div class="error-icon mb-4">
                    <i class="bi bi-exclamation-circle" style="font-size: 6rem; color: var(--danger-color);"></i>
                </div>
                <h1 class="display-1 fw-bold text-danger">500</h1>
                <h4 class="mb-3">Internal Server Error</h4>
                <p class="text-muted mb-4">
                    Something went wrong on our servers. We're working to fix this issue.
                </p>
                
                {% if message %}
                <div class="alert alert-danger mb-4">
                    <strong>Error Details:</strong> {{ message }}
                </div>
                {% endif %}
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a href="{{ url('/') }}" class="btn btn-primary">
                        <i class="bi bi-house"></i> Go to Dashboard
                    </a>
                    <button class="btn btn-outline-secondary" onclick="location.reload()">
                        <i class="bi bi-arrow-clockwise"></i> Try Again
                    </button>
                </div>
                
                <hr class="my-4">
                
                <div class="text-muted">
                    <small>
                        If this problem persists, please contact the system administrator.
                        <br>
                        Error occurred at: {{ "now"|date("Y-m-d H:i:s") }}
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-icon {
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% {
        transform: scale(1);
    }
    50% {
        transform: scale(1.1);
    }
    100% {
        transform: scale(1);
    }
}
</style>
{% endblock %}

