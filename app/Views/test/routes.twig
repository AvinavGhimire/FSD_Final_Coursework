{% extends "layouts/base.twig" %}

{% block title %}System Test - Route Testing{% endblock %}
{% block page_title %}Route Testing{% endblock %}

{% block content %}
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-list-check"></i> System Route Testing</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <h6 class="text-muted">Dashboard Routes</h6>
                <div class="list-group mb-3">
                    <a href="/genz/public/" class="list-group-item list-group-item-action">
                        <i class="bi bi-house"></i> Dashboard (/)
                    </a>
                    <a href="/genz/public/dashboard" class="list-group-item list-group-item-action">
                        <i class="bi bi-speedometer2"></i> Dashboard (/dashboard)
                    </a>
                </div>
                
                <h6 class="text-muted">Member Routes</h6>
                <div class="list-group mb-3">
                    <a href="/genz/public/members" class="list-group-item list-group-item-action">
                        <i class="bi bi-people"></i> Members List
                    </a>
                    <a href="/genz/public/members/create" class="list-group-item list-group-item-action">
                        <i class="bi bi-plus"></i> Create Member
                    </a>
                </div>
            </div>
            
            <div class="col-md-4">
                <h6 class="text-muted">Trainer Routes</h6>
                <div class="list-group mb-3">
                    <a href="/genz/public/trainers" class="list-group-item list-group-item-action">
                        <i class="bi bi-person-badge"></i> Trainers List
                    </a>
                    <a href="/genz/public/trainers/create" class="list-group-item list-group-item-action">
                        <i class="bi bi-plus"></i> Create Trainer
                    </a>
                </div>
                
                <h6 class="text-muted">Workout Plan Routes</h6>
                <div class="list-group mb-3">
                    <a href="/genz/public/workout-plans" class="list-group-item list-group-item-action">
                        <i class="bi bi-clipboard-check"></i> Workout Plans
                    </a>
                    <a href="/genz/public/workout-plans/create" class="list-group-item list-group-item-action">
                        <i class="bi bi-plus"></i> Create Plan
                    </a>
                </div>
            </div>
            
            <div class="col-md-4">
                <h6 class="text-muted">Other Routes</h6>
                <div class="list-group mb-3">

                    <a href="/genz/public/memberships" class="list-group-item list-group-item-action">
                        <i class="bi bi-card-checklist"></i> Memberships
                    </a>
                </div>
                
                <h6 class="text-muted">Test Routes</h6>
                <div class="list-group mb-3">
                    <a href="/genz/public/non-existent" class="list-group-item list-group-item-action list-group-item-warning">
                        <i class="bi bi-exclamation-triangle"></i> Test 404 Error
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

