{% extends "layouts/base.twig" %}

{% block title %}Trainers - View {{ trainer.first_name }} {{ trainer.last_name }}{% endblock %}
{% block page_title %}Trainer Details{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/genz/public/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/genz/public/trainers">Trainers</a></li>
            <li class="breadcrumb-item active">{{ trainer.first_name }} {{ trainer.last_name }}</li>
        </ol>
    </nav>
    <a href="/genz/public/trainers/edit?id={{ trainer.id }}" class="btn btn-primary">
        <i class="bi bi-pencil"></i> Edit Trainer
    </a>
</div>

<div class="row">
    <!-- Trainer Information -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-person-badge"></i> Trainer Information</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-3">
                    <i class="bi bi-person-circle" style="font-size: 5rem; color: var(--primary-color);"></i>
                    <h4 class="mt-2">{{ trainer.first_name }} {{ trainer.last_name }}</h4>
                    <p class="text-muted">Professional Fitness Trainer</p>
                </div>
                
                <div class="trainer-details">
                    <div class="detail-item">
                        <i class="bi bi-envelope"></i>
                        <strong>Email:</strong> {{ trainer.email }}
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-telephone"></i>
                        <strong>Phone:</strong> {{ trainer.phone }}
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-star"></i>
                        <strong>Specialization:</strong> {{ trainer.specialization }}
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-calendar-check"></i>
                        <strong>Hire Date:</strong> {{ trainer.hire_date|date("M d, Y") }}
                    </div>
                    <div class="detail-item">
                        <i class="bi bi-cash-stack"></i>
                        <strong>Hourly Rate:</strong> ${{ trainer.hourly_rate }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Trainer Statistics -->
        <div class="card mt-3">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-graph-up"></i> Performance Stats</h6>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h4 class="text-primary">{{ trainerStats.total_plans|default(0) }}</h4>
                        <small class="text-muted">Workout Plans</small>
                    </div>
                    <div class="col-6">
                        <h4 class="text-success">{{ trainerStats.active_members|default(0) }}</h4>
                        <small class="text-muted">Active Members</small>
                    </div>
                </div>
                <hr>
                <div class="row text-center">
                    <div class="col-6">
                        <h4 class="text-info">{{ trainerStats.monthly_plans|default(0) }}</h4>
                        <small class="text-muted">This Month</small>
                    </div>
                    <div class="col-6">
                        <h4 class="text-warning">{{ ((trainer.hourly_rate * trainerStats.monthly_hours)|default(0))|number_format(0) }}</h4>
                        <small class="text-muted">Monthly Revenue</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Trainer Activities -->
    <div class="col-lg-8">
        <!-- Navigation Tabs -->
        <ul class="nav nav-tabs" id="trainerTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="plans-tab" data-bs-toggle="tab" data-bs-target="#plans" type="button">
                    <i class="bi bi-clipboard-check"></i> Workout Plans
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="schedule-tab" data-bs-toggle="tab" data-bs-target="#schedule" type="button">
                    <i class="bi bi-calendar3"></i> Schedule
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="members-tab" data-bs-toggle="tab" data-bs-target="#members" type="button">
                    <i class="bi bi-people"></i> Members
                </button>
            </li>
        </ul>

        <div class="tab-content" id="trainerTabsContent">
            <!-- Workout Plans Tab -->
            <div class="tab-pane fade show active" id="plans" role="tabpanel">
                <div class="card mt-3 table-custom">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="mb-0">Assigned Workout Plans</h6>
                        <a href="/genz/public/workout-plans/create?trainer_id={{ trainer.id }}" class="btn btn-sm btn-primary">
                            <i class="bi bi-plus"></i> New Plan
                        </a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-primary">
                                    <tr>
                                        <th>Member</th>
                                        <th>Plan Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Status</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for plan in workoutPlans %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person-circle fs-5 text-primary me-2"></i>
                                                <div>
                                                    <strong>{{ plan.member_name }}</strong><br>
                                                    <small class="text-muted">{{ plan.member_email }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <strong>{{ plan.plan_name }}</strong><br>
                                            <small class="text-muted">{{ plan.plan_description|slice(0, 50) }}{% if plan.plan_description|length > 50 %}...{% endif %}</small>
                                        </td>
                                        <td>{{ plan.start_date|date("M d, Y") }}</td>
                                        <td>{{ plan.end_date|date("M d, Y") }}</td>
                                        <td>
                                            {% if plan.is_active %}
                                                <span class="badge bg-success">Active</span>
                                            {% else %}
                                                <span class="badge bg-secondary">Inactive</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/genz/public/workout-plans/view?id={{ plan.id }}" class="btn btn-sm btn-outline-primary" title="View Plan">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/genz/public/workout-plans/edit?id={{ plan.id }}" class="btn btn-sm btn-outline-warning" title="Edit Plan">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="6" class="text-center py-4 text-muted">
                                            <i class="bi bi-clipboard-x fs-1 d-block mb-2 opacity-50"></i>
                                            No workout plans assigned yet
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Schedule Tab -->
            <div class="tab-pane fade" id="schedule" role="tabpanel">
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-calendar3"></i> Weekly Schedule</h6>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            Schedule management feature coming soon! This will show trainer's availability and session bookings.
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Working Hours</h6>
                                <p class="text-muted">Monday - Friday: 6:00 AM - 8:00 PM<br>
                                Saturday: 8:00 AM - 6:00 PM<br>
                                Sunday: Rest Day</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Specialization Focus</h6>
                                <p class="text-muted">{{ trainer.specialization }} sessions and personalized training programs.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Members Tab -->
            <div class="tab-pane fade" id="members" role="tabpanel">
                <div class="card mt-3 table-custom">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-people"></i> Training Members</h6>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-success">
                                    <tr>
                                        <th>Member</th>
                                        <th>Membership Type</th>
                                        <th>Active Plans</th>
                                        <th>Last Session</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for member in trainerMembers %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-person-circle fs-5 text-success me-2"></i>
                                                <div>
                                                    <strong>{{ member.first_name }} {{ member.last_name }}</strong><br>
                                                    <small class="text-muted">{{ member.email }}</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">{{ member.membership_type }}</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">{{ member.active_plans_count|default(0) }} Plans</span>
                                        </td>
                                        <td>
                                            {% if member.last_session %}
                                                {{ member.last_session|date("M d, Y") }}
                                            {% else %}
                                                <span class="text-muted">No sessions yet</span>
                                            {% endif %}
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/genz/public/members/view?id={{ member.id }}" class="btn btn-sm btn-outline-primary" title="View Member">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="/genz/public/workout-plans/create?member_id={{ member.id }}&trainer_id={{ trainer.id }}" class="btn btn-sm btn-success" title="Create Plan">
                                                    <i class="bi bi-plus"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                    {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center py-4 text-muted">
                                            <i class="bi bi-people fs-1 d-block mb-2 opacity-50"></i>
                                            No members assigned yet
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.trainer-details .detail-item {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    padding: 8px 0;
    border-bottom: 1px solid #f0f0f0;
}

.trainer-details .detail-item i {
    margin-right: 10px;
    color: var(--primary-color);
    width: 20px;
}

.trainer-details .detail-item:last-child {
    border-bottom: none;
}
</style>
{% endblock %}

