{% extends "layouts/base.twig" %}

{% block title %}Login - GenzFitness{% endblock %}

{% block styles %}
<style>
    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .login-card {
        width: 100%;
        max-width: 450px;
        background: #FFFFFF;
    }
    .login-header {
        text-align: center;
        margin-bottom: 2rem;
        background: var(--pop-black);
        color: white;
        padding: 20px;
        margin: -48px -48px 2rem -48px; /* Offset card padding */
    }
    .login-icon {
        width: 80px;
        height: 80px;
        background: var(--pop-yellow);
        border: 4px solid var(--pop-black);
        display: flex;
        align-items: center;
        justify-content: center;
        color: black;
        font-size: 32px;
        margin: 0 auto 1rem;
        box-shadow: 6px 6px 0px rgba(255,255,255,0.2);
    }
</style>
{% endblock %}

{% block body_override %}
<div class="login-wrapper">
    <div class="card login-card p-4 p-md-5 pop-border pop-shadow">
        <div class="card-body">
            <div class="login-header">
                <div class="login-icon">
                    <i class="fas fa-dumbbell"></i>
                </div>
                <h4 class="mb-0 text-white">SYSTEM ACCESS</h4>
                <p class="small mb-0 text-white-50">INITIALIZING GENZFITNESS PROTOCOL</p>
            </div>

            {% if error %}
                <div class="alert alert-danger mb-4 pop-border pop-shadow">
                    <i class="fas fa-exclamation-circle me-2"></i>{{ error }}
                </div>
            {% endif %}

            <form method="POST" action="{{ url('/login') }}">
                <input type="hidden" name="csrf_token" value="{{ auth.csrf_token }}">
                
                <div class="mb-4">
                    <label class="form-label">IDENTIFIER (EMAIL)</label>
                    <input type="email" name="email" class="form-control" placeholder="USER@DOMAIN.COM" value="{{ email }}" required autofocus>
                </div>

                <div class="mb-5">
                    <label class="form-label">PASSCODE</label>
                    <input type="password" name="password" class="form-control" placeholder="••••••••" required>
                </div>

                <div class="position-relative">
                   <button type="submit" class="btn w-100 py-3 mb-4" style="background: var(--pop-blue); color: white;">ENTER SYSTEM</button>
                   <div class="btn-sticker sticker-top-right" style="background: var(--pop-yellow); pointer-events: none;">SECURE</div>
                </div>
                
                <div class="text-center mt-2">
                    <small class="fw-bold">UNAUTHORIZED ACCESS PROHIBITED</small>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
